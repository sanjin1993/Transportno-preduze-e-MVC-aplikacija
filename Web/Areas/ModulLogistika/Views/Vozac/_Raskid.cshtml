@model Web.Areas.ModulLogistika.Models.RaskidVM

@{
    ViewBag.Title = "Raskid radnog odnosa";
}

@using (Ajax.BeginForm("Raskid", new AjaxOptions { HttpMethod = "POST", OnSuccess = "updateModel(data);" }))
{
    @Html.ValidationSummary(false)
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.vozacId)

    <div class="form-group">
        <label>Datum raskida odnosa</label>
        @Html.TextBoxFor(model => model.datumRaskida, new { @class = "form-control date-picker" })
        @Html.ValidationMessageFor(model => model.datumRaskida, null, new { style = "color:red" })
    </div>

    <div class="form-group">
        <label>Status vozila</label>
        @Html.DropDownListFor(model => model.statusId, Model.statusi, "Odaberite Status vozača", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.statusId, null, new { style = "color:red" })
    </div>

    <p class="error-msg"></p>
    <div class="form-group">
        <input type="submit" class="btn btn-primary pull-right" value="Spremi" />
    </div>
}

<script>
    $(function () {
        $('.date-picker').datepicker({
            autoclose: true,
            todayHighlight: true,
            format: 'dd.mm.yyyy',
            startDate: "+2d"
        });
    });
</script>




