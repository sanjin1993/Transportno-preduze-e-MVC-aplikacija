
@model Web.Areas.ModulMehanicar.Models.StavkaNabavkaVM

@using (Html.BeginForm("SnimiStavku", "Nabavka" , new { id = Model.NabavkaStavkaId }, FormMethod.Post, new { data_ajax = "false" }))
{
    <div class="form-group">
        <label>Naziv stavke</label>
        @Html.TextBoxFor(model => model.Naziv, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Cijena </label>
        @Html.TextBoxFor(model => model.Cijena, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(x => x.NabavkaStavkaId)
    @Html.HiddenFor(x => x.NabavkaId)
    <input type="submit" value="Snimi" class="btn btn-success"/>
}

