@model TransportnoPreduzece.Web.Areas.ModulDispecer.Models.KlijentProfilVM

<div class="row new">
    <div class="col-md-12 " >
       
            <div class="x_panel">
                <div class="x_title">
                    <h3 class="x-title">Novi klijent</h3>
                </div>
                <div class="col-md-5 ">
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <label>Naziv</label>
                                @Html.TextBoxFor(model => model.Naziv, new { @class = "form-control " })
                                @Html.ValidationMessageFor(model => model.Naziv)

                            </div>
                            <div class="form-group">
                                <label>Drzava</label>
                                @Html.DropDownListFor(model => model.DrzavaId, Model.Drzave, "Odaberite državu", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DrzavaId)
                            </div>
                            <div class="form-group">
                                <label>Adresa</label>
                                @Html.TextBoxFor(model => model.Adresa, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Adresa)
                            </div>

                            <div class="form-group">
                                <label>Telefon</label>
                                @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Telefon)

                            </div>

                            <div class="form-group">
                                <label>ID Broj</label>
                                @Html.TextBoxFor(model => model.IDBroj, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IDBroj)
                            </div>
                            <div class="form-group">
                                <label>Fax</label>
                                @Html.TextBoxFor(model => model.Fax, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Fax)

                            </div>

                            <div class="form-group">
                                <label>Mail</label>
                                @Html.TextBoxFor(model => model.Mail, new { @class = "form-control" })

                            </div>
                            <input type="submit" class="btn btn-primary pull-right" value="Dodaj" />

                        }
                    </div>

                </div>
        </div>

    </div>
    


</div>
