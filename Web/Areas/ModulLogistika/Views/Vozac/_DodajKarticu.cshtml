@model Web.Areas.ModulLogistika.Models.VozacKarticaVM

@{
    Layout = null;
}

@using (Ajax.BeginForm("SnimiKarticu", new AjaxOptions { HttpMethod = "post", UpdateTargetId = "kartice" }))
{
    <div class="col-md-8 col-md-offset-2">
        <div class="form-group">
            <label>Kolicina (l)</label>
            @Html.TextBoxFor(x => x.kolicinaLitara, new { @class = "form-control", @Value = " " })
            @Html.ValidationMessageFor(x => x.kolicinaLitara)
        </div>

        <div class="form-group">
            <label>Ukupno</label>
            @Html.TextBoxFor(x => x.ukupniIznos, new { @class = "form-control", @Value = " " })
            @Html.ValidationMessageFor(x => x.ukupniIznos)
        </div>

        <div class="form-group">
            <label>Datum koristenja</label>
            @Html.TextBoxFor(x => x.datumKoristenja, new { @class = "form-control date-picker", @Value = " " })
            @Html.ValidationMessageFor(x => x.datumKoristenja)
        </div>

        <div class="form-group">
            <label>Benzinska pumpa</label>
            @Html.DropDownListFor(x => x.benzinskaId, Model.benzinske, "Odaberite benzinsku", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.benzinskaId)
        </div>

        @Html.HiddenFor(x => x.karticaId)
        @Html.HiddenFor(x => x.vozacId)
        <input type="submit" value="Spremi" class="btn btn-primary pull-right" />


    </div>
}

<script>
    $(function () {
        $('.date-picker').datepicker({
            autoclose: true,
            todayHighlight: true,
            format: 'dd.mm.yyyy',
            startDate: "+2d"
        });
    });
</script>






